                        <th>Destination</th>
                        <th>Stops</th>
                        <th>Total Cost</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Stop details will be populated here -->
                </tbody>
            </table>
        </div>
        <div class="section" id="queries-section">
            <h2>Queries</h2>
